<div class="mt-4">
  <h3>Add User Account</h3>
  <form method="post" action="/login/storedUser">
    <div class="mb-3">
      <label for="acc_email" class="form-label">Email:</label>
      <input
        type="email"
        class="form-control"
        id="acc_email"
        name="acc_email"
      />
    </div>

    <div class="mb-3">
      <label for="acc_name" class="form-label">Name:</label>
      <input type="text" class="form-control" id="acc_name" name="acc_name" />
    </div>

    <div class="mb-3">
      <label for="acc_pass" class="form-label">Password:</label>
      <input
        type="password"
        class="form-control"
        id="acc_pass"
        name="acc_pass"
      />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>